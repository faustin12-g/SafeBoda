@page "/trips"
@using SafeBoda.Admin.Shared
@inject SafeBoda.Admin.Services.AuthService AuthService
@inject SafeBoda.Admin.Services.ApiClient ApiClient
@inject IJSRuntime JSRuntime

<AdminLayout CurrentPage="trips">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="fw-bold mb-1">Active Trips</h4>
                    <p class="text-muted mb-0">Monitor and manage all active trips in real-time</p>
                </div>
                <div>
                    <button class="btn btn-safeboda me-2" @onclick="ShowCreateModal">
                        <i class="bi bi-plus-circle me-2"></i>Add Trip
                    </button>
                    <button class="btn btn-outline-success" @onclick="LoadTrips">
                        <i class="bi bi-arrow-clockwise me-2"></i>Refresh
                    </button>
                </div>
            </div>

            <!-- Search Bar and Page Size Selector -->
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" 
                               class="form-control border-start-0 ps-0" 
                               placeholder="Search by fare, rider name/phone, driver name/phone/plate..." 
                               value="@searchTerm"
                               @oninput="OnSearchInput"
                               style="box-shadow: none;">
                        @if (!string.IsNullOrWhiteSpace(searchTerm))
                        {
                            <button class="btn btn-outline-secondary" @onclick="ClearSearch" type="button">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        }
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center">
                                <label class="me-2 text-nowrap">Items per page:</label>
                                <select class="form-select" @onchange="OnPageSizeChanged">
                                    <option value="10" selected="@(pageSize == 10)">10</option>
                                    <option value="50" selected="@(pageSize == 50)">50</option>
                                    <option value="100" selected="@(pageSize == 100)">100</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-success" role="status"></div>
                    <p class="mt-3 text-muted">Loading trips...</p>
                </div>
            }
            else if (filteredTrips == null || !filteredTrips.Any())
            {
                <div class="card p-5 text-center">
                    <i class="bi bi-geo-alt" style="font-size: 4rem; color: #dee2e6;"></i>
                    <h5 class="mt-3 text-muted">No Active Trips</h5>
                    <p class="text-muted mb-0">
                        @if (!string.IsNullOrWhiteSpace(searchTerm))
                        {
                            <text>No trips match your search criteria. Try a different search term.</text>
                        }
                        else
                        {
                            <text>There are currently no active trips in the system.</text>
                        }
                    </p>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-modern mb-0">
                            <thead>
                                <tr>
                                    <th>Start Location</th>
                                    <th>End Location</th>
                                    <th>Fare</th>
                                    <th>Request Time</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var trip in paginatedTrips)
                                {
                                    <tr>
                                        <td>
                                            <i class="bi bi-geo-alt text-success me-1"></i>
                                            @trip.Start.Latitude.ToString("F4"), @trip.Start.Longitude.ToString("F4")
                                        </td>
                                        <td>
                                            <i class="bi bi-geo-alt-fill text-danger me-1"></i>
                                            @trip.End.Latitude.ToString("F4"), @trip.End.Longitude.ToString("F4")
                                        </td>
                                        <td class="fw-bold">@trip.Fare.ToString("N0") RWF</td>
                                        <td>@trip.RequestTime.ToString("MMM dd, HH:mm")</td>
                                        <td>
                                            <span class="badge-status badge-active">Active</span>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary me-2" 
                                                    @onclick="() => ShowEditModal(trip)"
                                                    title="Edit Trip">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" 
                                                    @onclick="() => DeleteTrip(trip.Id)"
                                                    title="Delete Trip">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pagination Controls -->
                <div class="card-footer bg-white border-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted small">
                            Showing @GetStartItem() to @GetEndItem() of @filteredTrips.Count trip(s)
                            @if (!string.IsNullOrWhiteSpace(searchTerm))
                            {
                                <span class="ms-2">
                                    <i class="bi bi-funnel me-1"></i>Filtered
                                </span>
                            }
                        </div>
                        <nav>
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <button class="page-link" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                                        <i class="bi bi-chevron-left"></i> Previous
                                    </button>
                                </li>
                                @foreach (var pageNum in GetPageNumbers())
                                {
                                    @if (pageNum == -1)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }
                                    else
                                    {
                                        var pageNumber = pageNum;
                                        <li class="page-item @(currentPage == pageNumber ? "active" : "")">
                                            <button class="page-link" @onclick="() => GoToPage(pageNumber)">@pageNumber</button>
                                        </li>
                                    }
                                }
                                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                    <button class="page-link" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                                        Next <i class="bi bi-chevron-right"></i>
                                    </button>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            }

    @if (showModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@(isEditMode ? "Edit Trip" : "Add New Trip")</h5>
                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                    </div>
                    <div class="modal-body">
                        <SearchableSelect TItem="SafeBoda.Admin.Models.Rider"
                                        Label="Select Rider"
                                        Required="true"
                                        Placeholder="Click to select or type to search..."
                                        Items="riders"
                                        GetDisplayText="@(r => r.Name)"
                                        GetSecondaryText="@(r => r.PhoneNumber)"
                                        GetValue="@(r => r.Id.ToString())"
                                        OnSelect="@((value) => { selectedRiderId = value; })"
                                        InitialValue="@selectedRiderId" />

                        <SearchableSelect TItem="SafeBoda.Admin.Models.Driver"
                                        Label="Select Driver"
                                        Required="true"
                                        Placeholder="Click to select or type to search..."
                                        Items="drivers"
                                        GetDisplayText="@(d => d.Name)"
                                        GetSecondaryText="@(d => d.PhoneNumber)"
                                        GetValue="@(d => d.Id.ToString())"
                                        OnSelect="@((value) => { selectedDriverId = value; })"
                                        InitialValue="@selectedDriverId" />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Start Latitude</label>
                                <input type="number" step="0.0001" class="form-control" @bind="currentTrip.Start.Latitude" placeholder="-1.9441" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Start Longitude</label>
                                <input type="number" step="0.0001" class="form-control" @bind="currentTrip.Start.Longitude" placeholder="30.0619" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">End Latitude</label>
                                <input type="number" step="0.0001" class="form-control" @bind="currentTrip.End.Latitude" placeholder="-1.9500" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">End Longitude</label>
                                <input type="number" step="0.0001" class="form-control" @bind="currentTrip.End.Longitude" placeholder="30.0700" />
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                        <button type="button" class="btn btn-safeboda" @onclick="SaveTrip" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            @(isEditMode ? "Update" : "Create")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</AdminLayout>

@code {
    private bool isLoading = true;
    private SafeBoda.Admin.Models.TripsResponse? tripsResponse;
    private List<SafeBoda.Admin.Models.Trip> trips = new();
    private List<SafeBoda.Admin.Models.Trip> filteredTrips = new();
    private List<SafeBoda.Admin.Models.Trip> paginatedTrips = new();
    private List<SafeBoda.Admin.Models.Rider> riders = new();
    private List<SafeBoda.Admin.Models.Driver> drivers = new();
    private string searchTerm = string.Empty;
    private bool showModal = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private string errorMessage = string.Empty;
    private SafeBoda.Admin.Models.Trip currentTrip = new();
    private string selectedRiderId = string.Empty;
    private string selectedDriverId = string.Empty;
    
    // Pagination
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages => (int)Math.Ceiling((double)filteredTrips.Count / pageSize);

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Task.WhenAll(LoadTrips(), LoadRiders(), LoadDrivers());
            StateHasChanged();
        }
    }

    private async Task LoadRiders()
    {
        riders = await ApiClient.GetRidersAsync();
    }

    private async Task LoadDrivers()
    {
        drivers = await ApiClient.GetDriversAsync();
    }

    private async Task LoadTrips()
    {
        isLoading = true;
        StateHasChanged();

        tripsResponse = await ApiClient.GetTripsAsync();
        trips = tripsResponse?.Trips ?? new List<SafeBoda.Admin.Models.Trip>();
        FilterTrips();
        UpdatePagination();
        
        isLoading = false;
        StateHasChanged();
    }

    private void FilterTrips()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            filteredTrips = trips;
        }
        else
        {
            var search = searchTerm.ToLower();
            filteredTrips = trips.Where(t =>
            {
                // Search by fare
                if (t.Fare.ToString().Contains(search))
                    return true;

                // Find the rider for this trip
                var rider = riders.FirstOrDefault(r => r.Id == t.RiderId);
                if (rider != null)
                {
                    if ((rider.Name?.ToLower().Contains(search) ?? false) ||
                        (rider.PhoneNumber?.ToLower().Contains(search) ?? false))
                        return true;
                }

                // Find the driver for this trip
                var driver = drivers.FirstOrDefault(d => d.Id == t.DriverId);
                if (driver != null)
                {
                    if ((driver.Name?.ToLower().Contains(search) ?? false) ||
                        (driver.PhoneNumber?.ToLower().Contains(search) ?? false) ||
                        (driver.MotoPlateNumber?.ToLower().Contains(search) ?? false))
                        return true;
                }

                return false;
            }).ToList();
        }
        currentPage = 1;
        UpdatePagination();
    }

    private void UpdatePagination()
    {
        var skip = (currentPage - 1) * pageSize;
        paginatedTrips = filteredTrips.Skip(skip).Take(pageSize).ToList();
    }

    private void GoToPage(int page)
    {
        if (page < 1 || page > totalPages) return;
        currentPage = page;
        UpdatePagination();
    }

    private void OnPageSizeChanged(ChangeEventArgs e)
    {
        pageSize = int.Parse(e.Value?.ToString() ?? "10");
        currentPage = 1;
        UpdatePagination();
    }

    private int GetStartItem()
    {
        if (!filteredTrips.Any()) return 0;
        return ((currentPage - 1) * pageSize) + 1;
    }

    private int GetEndItem()
    {
        var end = currentPage * pageSize;
        return Math.Min(end, filteredTrips.Count);
    }

    private List<int> GetPageNumbers()
    {
        var pages = new List<int>();
        if (totalPages <= 7)
        {
            for (int i = 1; i <= totalPages; i++)
                pages.Add(i);
        }
        else
        {
            if (currentPage <= 4)
            {
                for (int i = 1; i <= 5; i++)
                    pages.Add(i);
                pages.Add(-1);
                pages.Add(totalPages);
            }
            else if (currentPage >= totalPages - 3)
            {
                pages.Add(1);
                pages.Add(-1);
                for (int i = totalPages - 4; i <= totalPages; i++)
                    pages.Add(i);
            }
            else
            {
                pages.Add(1);
                pages.Add(-1);
                for (int i = currentPage - 1; i <= currentPage + 1; i++)
                    pages.Add(i);
                pages.Add(-1);
                pages.Add(totalPages);
            }
        }
        return pages;
    }

    private void OnSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        FilterTrips();
    }

    private void ClearSearch()
    {
        searchTerm = string.Empty;
        FilterTrips();
    }

    private void ShowCreateModal()
    {
        isEditMode = false;
        currentTrip = new SafeBoda.Admin.Models.Trip
        {
            Start = new SafeBoda.Admin.Models.Location(),
            End = new SafeBoda.Admin.Models.Location()
        };
        selectedRiderId = string.Empty;
        selectedDriverId = string.Empty;
        errorMessage = string.Empty;
        showModal = true;
    }

    private void ShowEditModal(SafeBoda.Admin.Models.Trip trip)
    {
        isEditMode = true;
        currentTrip = new SafeBoda.Admin.Models.Trip
        {
            Id = trip.Id,
            RiderId = trip.RiderId,
            DriverId = trip.DriverId,
            Start = new SafeBoda.Admin.Models.Location
            {
                Latitude = trip.Start.Latitude,
                Longitude = trip.Start.Longitude
            },
            End = new SafeBoda.Admin.Models.Location
            {
                Latitude = trip.End.Latitude,
                Longitude = trip.End.Longitude
            },
            Fare = trip.Fare,
            RequestTime = trip.RequestTime
        };
        selectedRiderId = trip.RiderId.ToString();
        selectedDriverId = trip.DriverId.ToString();
        errorMessage = string.Empty;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        currentTrip = new();
        selectedRiderId = string.Empty;
        selectedDriverId = string.Empty;
        errorMessage = string.Empty;
    }

    private async Task SaveTrip()
    {
        if (string.IsNullOrEmpty(selectedRiderId) || string.IsNullOrEmpty(selectedDriverId))
        {
            errorMessage = "Please select both a rider and a driver.";
            return;
        }

        if (!Guid.TryParse(selectedRiderId, out var riderId) || !Guid.TryParse(selectedDriverId, out var driverId))
        {
            errorMessage = "Invalid rider or driver selection.";
            return;
        }

        currentTrip.RiderId = riderId;
        currentTrip.DriverId = driverId;

        isSaving = true;
        errorMessage = string.Empty;
        StateHasChanged();

        try
        {
            if (isEditMode)
            {
                var updateRequest = new SafeBoda.Admin.Models.Trip
                {
                    Start = currentTrip.Start,
                    End = currentTrip.End
                };
                var result = await ApiClient.UpdateTripAsync(currentTrip.Id, updateRequest);
                if (result != null)
                {
                    await LoadTrips();
                    CloseModal();
                }
                else
                {
                    errorMessage = "Failed to update trip. Please try again.";
                }
            }
            else
            {
                var result = await ApiClient.CreateTripAsync(currentTrip);
                if (result != null)
                {
                    await LoadTrips();
                    CloseModal();
                }
                else
                {
                    errorMessage = "Failed to create trip. Please try again.";
                }
            }
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task DeleteTrip(Guid tripId)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this trip?"))
        {
            return;
        }

        var success = await ApiClient.DeleteTripAsync(tripId);
        if (success)
        {
            await LoadTrips();
        }
    }
}
