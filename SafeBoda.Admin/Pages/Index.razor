@page "/"

<div class="hero-section d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 hero-content">
                <h1 class="hero-title">
                    Welcome to<br/>
                    <span class="highlight">SafeBoda</span> Admin Portal
                </h1>
                <p class="hero-subtitle">
                    Manage your fleet, monitor trips in real-time, and access comprehensive 
                    analytics to keep your operations running smoothly.
                </p>
                <div class="mt-4">
                    <a href="/login" class="btn btn-safeboda btn-lg me-3">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                    </a>
                    <a href="#features" class="btn btn-safeboda-outline btn-lg">
                        <i class="bi bi-info-circle me-2"></i>Learn More
                    </a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="text-center">
                    <i class="bi bi-shield-check" style="font-size: 15rem; color: rgba(0, 166, 81, 0.3);"></i>
                </div>
            </div>
        </div>

        <div class="row mt-5 pt-5" id="features">
            <div class="col-md-4 mb-4">
                <div class="feature-card h-100">
                    <div class="feature-icon">
                        <i class="bi bi-geo-alt"></i>
                    </div>
                    <h5 class="text-white fw-bold">Real-time Tracking</h5>
                    <p class="text-white-50 mb-0">
                        Monitor all active trips and driver locations in real-time with our advanced tracking system.
                    </p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card h-100">
                    <div class="feature-icon">
                        <i class="bi bi-people"></i>
                    </div>
                    <h5 class="text-white fw-bold">Driver Management</h5>
                    <p class="text-white-50 mb-0">
                        Access comprehensive driver profiles, performance metrics, and manage your entire fleet.
                    </p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card h-100">
                    <div class="feature-icon">
                        <i class="bi bi-graph-up"></i>
                    </div>
                    <h5 class="text-white fw-bold">Analytics Dashboard</h5>
                    <p class="text-white-50 mb-0">
                        Get insights into your operations with detailed analytics and performance reports.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

