@inject SafeBoda.Admin.Services.AuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="sidebar @(isCollapsed ? "collapsed" : "")" style="width: @(isCollapsed ? "80px" : "280px");">
    <!-- Toggle Button -->
    <div class="sidebar-toggle-container">
        <button class="sidebar-toggle-btn" @onclick="ToggleSidebar" title="@(isCollapsed ? "Expand Sidebar" : "Collapse Sidebar")">
            <i class="bi @(isCollapsed ? "bi-chevron-right" : "bi-chevron-left")"></i>
        </button>
    </div>

    <div class="sidebar-content">
        <!-- Logo/Brand -->
        <div class="sidebar-brand">
        @if (!isCollapsed)
        {
            <h5 class="mb-0 fw-bold">SafeBoda</h5>
        }
        else
        {
            <i class="bi bi-bicycle" style="font-size: 1.5rem;"></i>
        }
    </div>

    <div class="px-3 mb-3">
        @if (!isCollapsed)
        {
            <h6 class="text-uppercase text-muted small fw-bold">Main Menu</h6>
        }
    </div>

    <nav class="nav flex-column">
        <a class="nav-link @(CurrentPage == "dashboard" ? "active" : "")" href="/dashboard" title="Dashboard">
            <i class="bi bi-speedometer2"></i>
            @if (!isCollapsed)
            {
                <span>Dashboard</span>
            }
        </a>
        <a class="nav-link @(CurrentPage == "trips" ? "active" : "")" href="/trips" title="Active Trips">
            <i class="bi bi-geo-alt"></i>
            @if (!isCollapsed)
            {
                <span>Active Trips</span>
            }
        </a>
        <a class="nav-link @(CurrentPage == "drivers" ? "active" : "")" href="/drivers" title="Drivers">
            <i class="bi bi-people"></i>
            @if (!isCollapsed)
            {
                <span>Drivers</span>
            }
        </a>
        <a class="nav-link @(CurrentPage == "riders" ? "active" : "")" href="/riders" title="Riders">
            <i class="bi bi-person-circle"></i>
            @if (!isCollapsed)
            {
                <span>Riders</span>
            }
        </a>
        <a class="nav-link @(CurrentPage == "users" ? "active" : "")" href="/users" title="Users">
            <i class="bi bi-person-badge"></i>
            @if (!isCollapsed)
            {
                <span>Users</span>
            }
        </a>
    </nav>

    <div class="px-3 mt-5 mb-3">
        @if (!isCollapsed)
        {
            <h6 class="text-uppercase text-muted small fw-bold">Account</h6>
        }
    </div>

    <nav class="nav flex-column">
        <a class="nav-link" href="#" @onclick="HandleLogout" @onclick:preventDefault title="Logout">
            <i class="bi bi-box-arrow-left"></i>
            @if (!isCollapsed)
            {
                <span>Logout</span>
            }
        </a>
    </nav>
    </div>
</div>

<style>
    .sidebar {
        background: white;
        border-right: 1px solid #e0e0e0;
        min-height: 100vh;
        position: relative;
        transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: visible;
    }

    .sidebar-content {
        height: 100vh;
        overflow-y: auto;
        overflow-x: hidden;
    }

    .sidebar-toggle-container {
        position: absolute;
        top: 15px;
        right: -20px;
        z-index: 1000;
    }

    .sidebar-toggle-btn {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--safeboda-green);
        color: white;
        border: 3px solid white;
        box-shadow: 0 4px 16px rgba(76, 175, 80, 0.4), 0 2px 8px rgba(0,0,0,0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        padding: 0;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            box-shadow: 0 4px 16px rgba(76, 175, 80, 0.4), 0 2px 8px rgba(0,0,0,0.2);
        }
        50% {
            box-shadow: 0 4px 20px rgba(76, 175, 80, 0.6), 0 2px 12px rgba(0,0,0,0.3);
        }
    }

    .sidebar-toggle-btn:hover {
        background: #388e3c;
        transform: scale(1.15);
        box-shadow: 0 6px 20px rgba(76, 175, 80, 0.5), 0 4px 12px rgba(0,0,0,0.3);
        animation: none;
    }

    .sidebar-toggle-btn i {
        font-size: 1.1rem;
        font-weight: bold;
        transition: transform 0.3s ease;
    }

    .sidebar-brand {
        padding: 1.5rem;
        text-align: center;
        color: var(--safeboda-green);
        border-bottom: 1px solid #e0e0e0;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
    }

    .sidebar.collapsed .sidebar-brand {
        padding: 1rem 0.5rem;
    }

    .sidebar .nav-link {
        padding: 0.75rem 1.5rem;
        color: #666;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.3s ease;
        border-left: 3px solid transparent;
        white-space: nowrap;
    }

    .sidebar.collapsed .nav-link {
        padding: 0.75rem;
        justify-content: center;
        gap: 0;
    }

    .sidebar .nav-link i {
        font-size: 1.25rem;
        min-width: 1.25rem;
        transition: all 0.3s ease;
    }

    .sidebar.collapsed .nav-link i {
        font-size: 1.5rem;
    }

    .sidebar .nav-link span {
        opacity: 1;
        transition: opacity 0.2s ease;
    }

    .sidebar.collapsed .nav-link span {
        opacity: 0;
        width: 0;
        overflow: hidden;
    }

    .sidebar .nav-link:hover {
        background: var(--safeboda-green-light);
        color: var(--safeboda-green);
        border-left-color: var(--safeboda-green);
    }

    .sidebar .nav-link.active {
        background: var(--safeboda-green-light);
        color: var(--safeboda-green);
        border-left-color: var(--safeboda-green);
        font-weight: 500;
    }

    /* Mobile Responsive */
    @@media (max-width: 768px) {
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            z-index: 1050;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
        }

        .sidebar.collapsed {
            width: 0 !important;
            border: none;
        }

        .sidebar-toggle-container {
            right: -45px;
        }

        .sidebar.collapsed .sidebar-toggle-container {
            right: auto;
            left: 15px;
        }

        .sidebar-toggle-btn {
            width: 50px;
            height: 50px;
            border: 4px solid white;
        }

        .sidebar-toggle-btn i {
            font-size: 1.3rem;
        }
    }
</style>

@code {
    [Parameter]
    public string CurrentPage { get; set; } = "";

    private bool isCollapsed = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Load saved state from localStorage
            var savedState = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "sidebarCollapsed");
            if (!string.IsNullOrEmpty(savedState))
            {
                isCollapsed = savedState == "true";
                StateHasChanged();
            }
        }
    }

    private async Task ToggleSidebar()
    {
        isCollapsed = !isCollapsed;
        // Save state to localStorage
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "sidebarCollapsed", isCollapsed.ToString().ToLower());
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/");
    }
}
